@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">
        Welcome @User.Claims.FirstOrDefault(x => x.Type == "name").Value
    </h1>
</div>
<div class="row mt-4">
    <div class="col">
        <p>
            This project uses Microsoft Identity Web, OpenID Connect, and Azure AD to authenticate users who can then access a web application.
        </p>
    </div>
</div>
@if (User.Claims.Any())
{
    <div class="row mt-4">
        <div class="col">
            <p>
                Below are a list of claims retrieved from your Active Directory profile.
            </p>

            <div class="small">
                @foreach (var claim in User.Claims)
                {
                    <div class="mb-3">
                        <strong>@claim.Type</strong>
                        <br />

                        @claim.Value
                    </div>
                }
            </div>
        </div>
    </div>
}